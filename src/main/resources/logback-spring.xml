<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for Railway deployment -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- File appender for local development -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/warplay.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/warplay.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <mdc/>
                <arguments/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Railway profile (production) -->
    <springProfile name="railway,prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- Your application specific logging -->
        <logger name="com.warplay" level="INFO"/>

        <!-- Database logging -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

        <!-- Spring Security logging -->
        <logger name="org.springframework.security" level="DEBUG"/>

        <!-- HTTP request logging -->
        <logger name="org.springframework.web" level="DEBUG"/>

        <!-- Reduce noise from common frameworks -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="com.zaxxer.hikari" level="WARN"/>
    </springProfile>

    <!-- Development profile -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>

        <logger name="com.warplay" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="INFO"/>
        <logger name="org.springframework.security" level="WARN"/>
    </springProfile>

    <!-- IntelliJ profile - file only -->
    <springProfile name="intellij">
        <root level="DEBUG">
            <appender-ref ref="FILE"/>
        </root>

        <logger name="com.warplay" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
    </springProfile>
</configuration>